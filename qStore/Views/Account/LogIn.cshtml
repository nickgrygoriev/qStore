@model qStore.Models.LoginModel

<h2 class="page-header">LogIn</h2>

    @using (Html.BeginForm("SendLogIn", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.Name, new { @class = "control-label" })
            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Password, new { @class = "control-label" })
            @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
        </div>

        @Html.HiddenFor(x => x.ReturnUrl)

        <input type="submit" value="Log In" class="btn btn-primary" />
    }


